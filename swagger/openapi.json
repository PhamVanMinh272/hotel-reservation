{
  "openapi": "3.0.0",
  "info": {
    "title": "Hotel Booking API",
    "description": "API for managing hotel bookings",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local server"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "A list of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/hotels": {
      "get": {
        "summary": "Get all hotels",
        "tags": ["Hotels"],
        "description": "Retrieve a list of all hotels",
        "parameters": [
            {
                "name": "name",
                "in": "query",
                "description": "Filter hotels by name",
                "required": false,
                "schema": {
                "type": "string"
                }
            }
        ],
        "responses": {
          "200": {
            "description": "A list of hotels",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Hotel"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/hotels/{hotelId}": {
      "get": {
        "summary": "Get hotel by ID",
        "tags": ["Hotels"],
        "description": "Retrieve a single hotel by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the hotel to retrieve",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A single hotel",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Hotel"
                }
              }
            }
          },
          "404": {
            "description": "Hotel not found"
          }
        }
      }
    },
    "/hotels/{hotelId}/rooms": {
      "get": {
        "summary": "Get rooms for a specific hotel",
        "tags": ["Hotels"],
        "description": "Retrieve a list of rooms for a specific hotel by its ID",
        "parameters": [
          {
            "name": "hotelId",
            "in": "path",
            "required": true,
            "description": "ID of the hotel to retrieve rooms for",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of rooms for the specified hotel",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Room"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Hotel not found"
          }
        }
      }
    },
    "/hotels/{hotelId}/rooms/{roomId}": {
      "get": {
        "summary": "Get a specific room in a hotel",
        "tags": ["Hotels"],
        "description": "Retrieve details of a specific room in a hotel by hotel ID and room ID",
        "parameters": [
          {
            "name": "hotelId",
            "in": "path",
            "required": true,
            "description": "ID of the hotel",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "roomId",
            "in": "path",
            "required": true,
            "description": "ID of the room",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Details of the specified room",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Room"
                }
              }
            }
          },
          "404": {
            "description": "Hotel or Room not found"
          }
        }
      }
    },
    "/bookings": {
      "get": {
        "summary": "Get all bookings",
        "tags": ["Bookings"],
        "description": "Retrieve a list of all bookings",
        "responses": {
          "200": {
            "description": "A list of bookings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Booking"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new booking",
        "tags": ["Bookings"],
        "description": "Create a new booking for a hotel room",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "integer",
                    "example": 1
                  },
                  "hotelId": {
                    "type": "integer",
                    "example": 1
                  },
                  "roomId": {
                    "type": "integer",
                    "example": 101
                  },
                  "checkInDate": {
                    "type": "string",
                    "format": "date",
                    "example": "2023-10-01"
                  },
                  "checkOutDate": {
                    "type": "string",
                    "format": "date",
                    "example": "2023-10-05"
                  }
                },
                "required": ["userId", "hotelId", "roomId", "checkInDate", "checkOutDate"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Booking created successfully"
          }
        }
      }
    }
  },
  "components": {
    "Users": {

    },
    "Hotels": {
      "type": "array",
      "items": {
        "properties": {
          "id": {
            "type": "integer",
            "example": "1"
          },
          "name": {
            "type": "string",
            "example": "Grand Hotel"
          },
          "location": {
            "type": "string",
            "example": "New York"
          },
          "roomsAvailable": {
            "type": "integer",
            "example": 20
          }
        }
      }
    },
    "Hotel": {
        "type": "object",
        "properties": {
            "id": {
            "type": "integer",
            "example": 1
            },
            "name": {
            "type": "string",
            "example": "Grand Hotel"
            },
            "location": {
            "type": "string",
            "example": "New York"
            },
            "roomsAvailable": {
            "type": "integer",
            "example": 20
            }
        }
    },
    "Rooms": {
      "type": "array",
      "items": {
        "properties": {
          "id": {
            "type": "integer",
            "example": 101
          },
          "hotelId": {
            "type": "integer",
            "example": 1
          },
          "type": {
            "type": "string",
            "example": "Deluxe"
          },
          "price": {
            "type": "number",
            "format": "float",
            "example": 150.00
          },
          "available": {
            "type": "boolean",
            "example": true
          },
          "maxOccupancy": {
            "type": "integer",
            "example": 2
          }
        }
      }
    },
    "Room": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 101
          },
          "hotelId": {
            "type": "integer",
            "example": 1
          },
          "type": {
            "type": "string",
            "example": "Deluxe"
          },
          "price": {
            "type": "number",
            "format": "float",
            "example": 150.00
          },
          "available": {
            "type": "boolean",
            "example": true
          },
          "maxOccupancy": {
            "type": "integer",
            "example": 2
          }
        }
    },
    "Bookings": {
      "type": "array",
      "items": {
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "userId": {
            "type": "integer",
            "example": 1
          },
          "hotelId": {
            "type": "integer",
            "example": 1
          },
          "roomId": {
            "type": "integer",
            "example": 101
          },
          "checkInDate": {
            "type": "string",
            "format": "date",
            "example": "2023-10-01"
          },
          "checkOutDate": {
            "type": "string",
            "format": "date",
            "example": "2023-10-05"
          }
        }
      }
    }
  }
}